<div style="background-image:url('http://yorkdale.com/wp-content/uploads/2012/11/James-Reimer-pic.jpg'); height: 600px; width: 1200px">
<div class="containter-fluid">
	<div class="row-fluid" id="pageHeader">
		<div class="span6" style="color:black; padding-left: 30px; background-color:#ffffff; border:1px grey; opacity:0.9; filter:alpha(opacity=90); position:fixed; z-index: 100;  top:40%;  left:20%;  margin:-100px 0 0 -100px;  width:400px;  height:500px;">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit 'Sign Up', :class => 'btn btn-danger' %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
